        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/editText1"
        android:inputType="number"
        android:hint="Unsaved Phone Number(s)">

    </EditText>
    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
