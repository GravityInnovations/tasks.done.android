<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.gravity.innovations.manager.call.sms.FormActivity$PlaceholderFragment" >

   <!--  --><CheckBox
        android:id="@+id/toggle_fromNumbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/abc_cab_background_top_holo_light"
        android:text="Sender(s)" />

   

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="20dp"
        android:id="@+id/from_Numbers"
        >

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/button1"
            android:inputType="textPersonName"
            android:hint="Contacts" >

        </EditText>

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editText1"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="+" />
       <EditText
        android:id="@+id/editText2"
