<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:scrollbars="vertical"
    tools:context="com.gravity.innovations.manager.call.sms.FormActivity$PlaceholderFragment" >

   <!--  -->

   <LinearLayout
       android:layout_width="match_parent"
      android:layout_height="wrap_content"
       android:padding="10dp"
       android:orientation="vertical"
       android:layout_marginTop="5dp"
       android:background="@drawable/abc_cab_background_bottom_holo_light"
       >

<RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       
       >

        <TextView
            android:id="@+id/toggle_senders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_add_sender"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/btn_add_sender"
            android:layout_toLeftOf="@+id/btn_add_sender"
            android:text="Sender(s)" 
            android:textAppearance="?android:attr/textAppearanceLarge" />

   <ImageButton
       android:id="@+id/btn_add_sender"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_alignParentTop="true"
       
       android:layout_marginLeft="20dp"
        android:background="@null"
        android:src="@drawable/ic_action_new" />

   

   </RelativeLayout>
  <ListView
    android:id="@+id/list_senders"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
   
    >
</ListView>
</LinearLayout>
 <LinearLayout
       android:layout_width="match_parent"
      android:layout_height="wrap_content"
       android:padding="10dp"
       android:orientation="vertical"
       android:layout_marginTop="5dp"
       android:background="@drawable/abc_cab_background_bottom_holo_light"
       >
  <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >

        <TextView
            android:id="@+id/toggle_contentCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_add_contentCondition"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/btn_add_contentCondition"
            android:layout_toLeftOf="@+id/btn_add_contentCondition"
            android:text="Content Condition(s)" 
            android:textAppearance="?android:attr/textAppearanceLarge" />

   <ImageButton
       android:id="@+id/btn_add_contentCondition"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_alignParentTop="true"
       android:layout_marginLeft="20dp"
        

        android:background="@null"
        android:src="@drawable/ic_action_new" />

   </RelativeLayout>
  <ListView
    android:id="@+id/list_contentCondition"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
</ListView>
  </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
      android:layout_height="wrap_content"
       android:padding="10dp"
       android:orientation="vertical"
       android:layout_marginTop="5dp"
       android:background="@drawable/abc_cab_background_bottom_holo_light"
       >
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >

        <TextView
            android:id="@+id/toggle_sendingFrequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_add_sendingFrequency"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/btn_add_sendingFrequency"
            android:layout_toLeftOf="@+id/btn_add_sendingFrequency"
            android:text="Frequency" 
            android:textAppearance="?android:attr/textAppearanceLarge" />

   <ImageButton
       android:id="@+id/btn_add_sendingFrequency"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_alignParentTop="true"
       android:layout_marginLeft="20dp"
        android:background="@null"
        android:src="@drawable/ic_action_new" />

   </RelativeLayout>
  <ListView
    android:id="@+id/list_sendingFrequency"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
</ListView>
  </LinearLayout>
