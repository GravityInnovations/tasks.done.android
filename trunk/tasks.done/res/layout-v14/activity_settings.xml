<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="5dp">
 
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Features"
        
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
     <View android:background="@android:color/holo_blue_dark" android:layout_width="match_parent" android:layout_height="1px"/>
     
     <Switch
            
            android:id="@+id/Sharing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sharing" android:padding="10dp"/>
     <View android:background="#ddd" android:layout_width="match_parent" android:layout_height="1px"/>
     <Switch
            
            android:id="@+id/Server_Sync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sync with server" android:padding="10dp"/>
     <View android:background="#ddd" android:layout_width="match_parent" android:layout_height="1px"/>
     <Switch
            
            android:id="@+id/Google_Sync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sync with Google" android:padding="10dp"/>
     <View android:background="#ddd" android:layout_width="match_parent" android:layout_height="1px"/>
     
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp" >

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
     <View android:background="@android:color/holo_blue_dark" android:layout_width="match_parent" android:layout_height="1px"/>

     <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp" >

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Theme"
        
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
     <View android:background="@android:color/holo_blue_dark" android:layout_width="match_parent" android:layout_height="1px"/>
 <RelativeLayout 
    android:layout_width="wrap_content"
    android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
     >
     <View
         android:id="@+id/orange_theme"
         android:onClick="action_orange_theme" 
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:background="@drawable/circle_orange" 
         android:layout_alignParentRight="true" />

      <View
          android:id="@+id/black_theme"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:layout_alignTop="@+id/orange_theme"
          android:layout_marginRight="14dp"
          android:layout_toLeftOf="@+id/orange_theme"
          android:background="@drawable/circle_black"
          android:onClick="action_black_theme" />

       <View
           android:id="@+id/turquosie_theme"
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:layout_marginRight="14dp"
           android:layout_alignTop="@+id/black_theme"
           android:layout_toLeftOf="@+id/black_theme"
           android:background="@drawable/circle_turquosie"
           android:onClick="action_turquosie_theme" />

       <View
           android:id="@+id/grey_theme"
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:layout_marginRight="14dp"
           
           android:layout_alignTop="@+id/turquosie_theme"
           android:layout_toLeftOf="@+id/turquosie_theme"
           android:background="@drawable/circle_grey"
           android:onClick="action_black_theme" />

       <View
           android:id="@+id/blue_theme"
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:layout_marginRight="14dp"
           android:layout_alignTop="@+id/grey_theme"
           android:layout_toLeftOf="@+id/grey_theme"
           android:background="@drawable/circle_blue" />

   </RelativeLayout>
</LinearLayout>
   
    
</LinearLayout>
</LinearLayout>
