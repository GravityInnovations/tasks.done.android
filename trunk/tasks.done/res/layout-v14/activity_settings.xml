<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="5dp">
 
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Features"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
     <View android:background="@android:color/holo_blue_dark" android:layout_width="match_parent" android:layout_height="1px"/>
     
     <Switch
            
            android:id="@+id/Sharing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sharing" android:padding="10dp"/>
     <View android:background="#ddd" android:layout_width="match_parent" android:layout_height="1px"/>
     <Switch
            
            android:id="@+id/Server_Sync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sync with server" android:padding="10dp"/>
     <View android:background="#ddd" android:layout_width="match_parent" android:layout_height="1px"/>
     <Switch
            
            android:id="@+id/Google_Sync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sync with Google" android:padding="10dp"/>
     <View android:background="#ddd" android:layout_width="match_parent" android:layout_height="1px"/>
     
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp" >

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
     <View android:background="@android:color/holo_blue_dark" android:layout_width="match_parent" android:layout_height="1px"/>

     <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp" >

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Theme"
        
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
     <View android:background="@android:color/holo_blue_dark" android:layout_width="match_parent" android:layout_height="1px"/>

</LinearLayout>
   
    
</LinearLayout>
</LinearLayout>
