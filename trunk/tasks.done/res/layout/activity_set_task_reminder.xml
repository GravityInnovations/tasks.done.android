    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:hint="title" />
    <!-- android:layout_below="@+id/reminder_activity_header" -->

    <View
        android:id="@+id/line_title"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textViewTitle"
        android:background="@color/line_divider" />

    <TextView 
        android:id="@+id/textViewDetails"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/line_two"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/line_title"
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="details" />

    <View
        android:id="@+id/line_details"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/textViewDetails"
        android:layout_below="@+id/textViewDetails"
        android:background="@color/line_divider" />

    <RelativeLayout
        android:id="@+id/set_alarm_layout"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@+id/line_details"
        android:layout_marginTop="5dp" >

        <include layout="@layout/set_alarm" />
    </RelativeLayout>

    <View
        android:id="@+id/line_two"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/set_alarm_layout"
        android:layout_marginLeft="60dp"
        android:background="@color/line_divider" />

    <ImageView
        android:id="@+id/repeat_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_two"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_action_replay" />

    <TextView
        android:id="@+id/repeat_tv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/line_two"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/repeat_iv"
        android:clickable="false"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="Repeat" />

    <View
        android:id="@+id/line_three"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/repeat_tv"
        android:layout_marginLeft="60dp"
        android:background="@color/line_divider" />

    <ImageView
        android:id="@+id/notification_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_three"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_action_place" />

    <TextView
        android:id="@+id/notification_tv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/line_three"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/notification_iv"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="Notifications" />

    <View
        android:id="@+id/line_four"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/notification_tv"
        android:layout_marginLeft="60dp"
        android:background="@color/line_divider" />

    <ImageView
        android:id="@+id/notes_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_four"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_action_sort_by_size" />

    <TextView
        android:id="@+id/textViewNotes"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/line_four"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/line_four"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="notes" />

    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/textViewNotes"
        android:layout_below="@+id/textViewNotes"
        android:background="@color/line_divider" />

    <ImageView
        android:id="@+id/details_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/textViewDetails"
        android:src="@drawable/ic_list_default" />

</RelativeLayout>