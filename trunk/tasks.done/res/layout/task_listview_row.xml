<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="1dp"
    android:paddingRight="1dp" >

    <RelativeLayout
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/user_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/updated"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/user_task_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/user_task_title"
            android:layout_toLeftOf="@+id/done_toggle"
            android:ellipsize="end"
            android:lines="2"
            android:text="asa"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/user_task_notes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/user_task_details"
            android:text="as"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="gone" />

        <!-- <GridView -->
        <!-- android:id="@+id/tasklist_gridview" -->
        <!-- android:layout_width="fill_parent" -->
        <!-- android:layout_height="fill_parent" -->
        <!-- android:layout_alignParentLeft="true" -->
        <!-- android:layout_below="@+id/user_task_details" -->
        <!-- android:layout_toLeftOf="@+id/done_toggle" -->
        <!-- android:background="@color/cloud" -->
        <!-- android:columnWidth="50dp" -->
        <!-- android:numColumns="auto_fit" -->
        <!-- android:stretchMode="columnWidth" -->
        <!-- android:verticalSpacing="5dp" -->
        <!-- android:horizontalSpacing="4dp" -->
        <!-- android:listSelector="@color/selection_blue" -->
        <!-- android:stackFromBottom="false" -->
        <!-- android:scrollingCache="true" -->
        <!-- android:smoothScrollbar="true" -->
        <!-- android:fastScrollAlwaysVisible="false" -->
        <!-- android:requiresFadingEdge="vertical" -->
        <!-- android:visibility="gone" -->
        <!-- > -->
        <!-- </GridView> -->

        <include 
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/user_task_details"
            android:layout_toLeftOf="@+id/done_toggle"
            layout="@layout/gridview_in_listview"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <ImageView
            android:id="@+id/alarm_toggle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/updated"
            android:focusable="false"
            android:onClick="onClick_Tick"
            android:src="@drawable/alarm_taskrow_visible" />

        <TextView
            android:id="@+id/updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingRight="2dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/updatedtimecolor" />

        <ImageView
            android:id="@+id/done_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/updated"
            android:focusable="false"
            android:onClick="onClick_Tick"
            android:src="@drawable/task_row_bg" />

        <LinearLayout
            android:id="@+id/submenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/done_toggle"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>