<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_timepicker_header"
        android:layout_toLeftOf="@+id/tv_1"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_timepicker_header"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:text="2"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_2"
        android:layout_alignBottom="@+id/tv_2"
        android:layout_alignParentRight="true"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:text="3"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/tv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/tv_1"
        android:layout_below="@+id/tv_1"
        android:background="@android:color/transparent"
        android:text="4"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/tv_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_2"
        android:layout_below="@+id/tv_2"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:text="5"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/tv_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_3"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_3"
        android:background="@android:color/transparent"
        android:text="6"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/tv_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_4"
        android:background="@android:color/transparent"
        android:text="7"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/tv_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_5"
        android:layout_below="@+id/tv_5"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:text="8"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/tv_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_6"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_6"
        android:background="@android:color/transparent"
        android:text="9"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/tv_am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_7"
        android:background="@android:color/transparent"
        android:text="AM"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/tv_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_am"
        android:layout_alignBottom="@+id/tv_am"
        android:layout_alignLeft="@+id/tv_8"
        android:layout_below="@+id/tv_8"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/backspace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_9"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_9"
        android:background="@drawable/ic_action_cancel"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RelativeLayout
        android:id="@+id/custom_timepicker_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp" >

        <TextView
            android:id="@+id/tv_hours_one_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/tv_hours_zero_index"
            android:gravity="start"
            android:includeFontPadding="false"
            android:text="0"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/tv_hours_zero_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/tv_colons"
            android:gravity="start"
            android:includeFontPadding="false"
            android:text="0"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/tv_colons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:gravity="start"
            android:includeFontPadding="false"
            android:padding="0dp"
            android:text=":"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/tv_minutes_one_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv_colons"
            android:gravity="start"
            android:includeFontPadding="false"
            android:padding="0dp"
            android:text="0"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/tv_minutes_zero_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv_minutes_one_index"
            android:gravity="start"
            android:includeFontPadding="false"
            android:padding="0dp"
            android:text="0"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/tv_chrnonometer_am_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv_minutes_zero_index"
            android:gravity="start"
            android:includeFontPadding="false"
            android:text="AM"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>